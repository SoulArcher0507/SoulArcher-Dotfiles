{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "top",
    "layer-shell": true,
    "cssPriority": "user",
    "control-center-margin-top": 0,
    "control-center-margin-bottom": 0,
    "control-center-margin-right": 14,
    "control-center-margin-left": 0,
    "notification-2fa-action": true,
    "notification-inline-replies": false,
    "notification-icon-size": 32,
    "notification-body-image-height": 100,
    "notification-body-image-width": 100,
    /* Increase the toast popup width to make it slightly wider than the
     * default.  The original Quickshell popup was about 380px, and
     * increasing to 420px makes action buttons easier to read. */
    "notification-window-width": 420,
    "timeout": 6,
    "timeout-low": 3,
    "timeout-critical": 0,
    "fit-to-screen": false,
    "control-center-width": 420,
    "control-center-height": 720,
    "keyboard-shortcuts": true,
    "image-visibility": "always",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "dnd",
        "mpris",
        "volume",
        "backlight",
        "title",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "label": {
            "max-lines": 1,
            "text": "Notification"
        },
        "mpris": {
            "image-size": 50,
            "image-radius": 0
        },
        "volume": {
            "label": "󰕾"
        },
        "backlight": {
            "label": "󰃟"
        }
    }
}
